        <script>
            $(document).ready(function () {
                $('.delete-button').click(function () {
                    var id = $(this).data('id');
                    var url = '@Url.Action("Delete", "User")';

                    $.ajax({
                        type: "POST",
                        url: url,
                        data: { id: id },
                        success: function (response) {
                            if (response.success) {
                                alert(response.message); // Hiển thị thông báo từ API
                                location.reload(); // Tải lại trang sau khi xóa thành công
                            } else {
                                alert("Lỗi khi xóa: " + response.message); // Hiển thị thông báo lỗi từ API
                            }
                        },
                        error: function (xhr, status, error) {
                            alert("Đã xảy ra lỗi: " + xhr.responseText); // Hiển thị lỗi khi gọi API
                        }
                    });
                });
            });
        </script>
        

