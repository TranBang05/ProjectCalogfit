                            {
                                <div class="alert alert-danger">
                                    @ViewBag.ErrorMessage
                                </div>
                            }
                            else
                            {
                                <table id="example" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>UserId</th>
                                            <th>Username</th>
                                            
                                            <th>Email</th>
                                            <th>Goals</th>
                                        </tr>
                                    </thead>
                                   
                                    <tbody>
                                        @foreach (var s in Model)
                                        {
                                            <tr>
                                                <td>@s.UserId</td>
                                                <td>@s.Username</td>
                                                
                                                <td>@s.Email</td>
                                                <td>@s.Goals</td>
                                                <td>
                                                    <a href="@Url.Action("Update", "User", new { id = s.UserId })" class="btn btn-primary">Update</a>
                                                    <a href="javascript:;" onclick="deleteSubject(@s.UserId)" class="btn btn-danger">Delete</a>
                                                    <button class="delete-button" data-id="@s.UserId">Delete</button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <a href="/User/Create" class="btn btn-success">Create New</a>
                            }
                        </div>
